{
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "rimraf": "6.0.1",
    "syncpack": "^13.0.2",
    "turbo": "^2.4.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "name": "lofwen",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run --filter \"./packages/*\" build",
    "biome:check": "biome check",
    "biome:check:write": "biome check --write",
    "biome:check:write:unsafe": "biome check --write --unsafe",
    "tsc:noEmit": "turbo run tsc:noEmit",
    "tsc:noEmit:watch": "turbo run tsc:noEmit:watch",
    "syncpack:fix-mismatches": "syncpack fix-mismatches",
    "test": "turbo run test",
    "test:packages": "turbo run --filter \"./packages/*\" test"
  },
  "workspaces": ["apps/*", "packages/*"]
}
